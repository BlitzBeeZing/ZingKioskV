<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_dark"
    android:paddingBottom="@dimen/_4sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#525252"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/divider_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/divider_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barbeque Paneer Burrito"
            android:fontFamily="@font/syne_semibold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/text_color_light"
            android:id="@+id/item_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:fontFamily="@font/manrope_semibold"
            android:text="â‚¹ 239"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/item_price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_price"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/manrope_medium"
            android:text="Barbeque Sauce, Chocolate Brownie"
            android:textColor="#87877a"
            android:textSize="@dimen/_6sdp"
            android:id="@+id/item_description"
            android:layout_toLeftOf="@+id/item_quantity_layout"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:id="@+id/item_quantity_layout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/remove_btn"
                android:layout_centerVertical="true"
                android:id="@+id/delete_item"
                android:layout_weight="1.6"
                android:layout_marginLeft="@dimen/_8sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="1"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_14sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/item_quantity"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/add_btn"
                android:layout_centerVertical="true"
                android:id="@+id/add_item"
                android:layout_weight="1.6"
                android:layout_marginRight="@dimen/_4sdp"/>




        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>